{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist/",
    "sourceMap": true,
    "composite": true,
    "rootDir": "src",
    "baseUrl": "../../",
    "paths": {
      "src": ["src"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    { "path": "../../tsconfig.json" }
  ]
}
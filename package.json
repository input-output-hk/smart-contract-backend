  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/execution_service/infrastructure/node_js/execute.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "pkg": {
    "scripts": [
      "node_modules/puppeteer/lib/*.js"
    ],
    "assets": [
      "*.js"
    ]
  }

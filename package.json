{
  "name": "smart-contract-backend",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && npm run api-build && tsc",
    "dev": "npm run api-build && nodemon -e ts -w ./src -x npm run dev:serve",
    "dev:serve": "node --inspect -r dotenv/config -r ts-node/register -- src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "start": "npm run build && node -r dotenv/config dist/index.js",
    "test": "npm run lint && npm run build && nyc mocha",
    "test:watch": "mocha -w",
    "test:coverage": "npm test && http-server coverage",
    "api-build": "tsoa swagger && tsoa routes",
    "start:docker": "docker-compose up",
    "start:docker-init": "docker-compose up --build",
    "restart:docker": "docker-compose down && sudo rm -rf dist && npm run build && docker-compose up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/input-output-hk/smart-contract-backend.git"
  },
  "keywords": [
    "Apollo",
    "ApolloServer",
    "GraphQL",
    "Cardano"
  ],
  "contributors": [
    "Rhys Bartels-Waller <rhys.bartelswaller@iohk.io> (https://iohk.io)",
    "Sam Jeston <sam.jeston@iohk.io> (https://iohk.io)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/input-output-hk/smart-contract-backend/issues"
  },
  "homepage": "https://github.com/input-output-hk/smart-contract-backend#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/expect": "^1.20.4",
    "@types/graphql": "^14.0.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.1",
    "@types/sinon": "^7.0.10",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/hapi": "^18.0.1",
    "@types/supertest": "^2.0.7",
    "@types/axios": "^0.14.0",
    "@types/dockerode": "^2.5.12",
    "@types/express": "^4.16.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.15.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "sinon": "^7.2.7",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333",
    "http-server": "^0.11.1",
    "nyc": "^13.3.0",
    "source-map-support": "^0.5.11",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "apollo-link": "^1.2.10",
    "apollo-link-http": "^1.5.13",
    "apollo-server": "^2.4.8",
    "apollo-server-testing": "^2.4.8",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cross-fetch": "^3.0.1",
    "decompress": "^4.2.0",
    "dockerode": "^2.5.8",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "find-free-port": "^2.0.0",
    "graphql": "^14.1.1",
    "http-proxy": "^1.17.0",
    "nock": "^10.0.6",
    "pm2": "^3.4.0",
    "rimraf": "^2.6.3",
    "swagger-ui-dist": "^3.21.0",
    "tar": "^4.4.8",
    "tcp-port-used": "^1.0.1",
    "tsoa": "^2.3.8",
    "web3": "^1.0.0-beta.50",
    "websocket": "^1.0.28"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
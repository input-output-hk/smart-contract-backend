    "@types/cucumber": "^4.0.6",
    "@types/detect-node": "^2.0.0",
    "@types/dockerode": "^2.5.20",
    "@types/expect": "^1.20.4",
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^8.0.0",
    "@types/graphql": "^14.2.2",
    "@types/hapi": "^18.0.2",
    "@types/ioredis": "^4.0.13",
    "@types/mocha": "^5.2.7",
